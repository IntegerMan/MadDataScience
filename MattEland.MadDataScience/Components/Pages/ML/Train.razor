@page "/ML/Train"
@rendermode InteractiveServer

@using MattEland.MadDataScience.Services
@inject MachineLearningService MachineLearningService

<h3>Train</h3>

<MudButton ButtonType="ButtonType.Submit" Color="Color.Primary" Variant="Variant.Filled" @onclick="HandleTrainClick">Train Model</MudButton>

@code {

    private Task HandleTrainClick()
    {
        Console.WriteLine("Training Model");
        MachineLearningService.TrainModel();
        
        return Task.CompletedTask;
    }

}