@page "/Intro/Projects"
<MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="mx-auto my-8">
    <MudText Typo="Typo.h4">Projects</MudText>
    <MudText Typo="Typo.subtitle1" Class="mb-8">
    Here are some of the projects we'll cover in this talk.
    </MudText>
    
    <MudGrid Class="mt-8">
        <MudItem xs="12" sm="6" md="4">
            <MudCard>
                <MudCardContent>
                    <MudText Typo="Typo.h6">Predicting Video Game Ratings</MudText>
                    <img src="ModelTraining.png" alt="Kaggle Video Game Ratings" style="width: 100%; height: 300px; object-fit: cover;">
                </MudCardContent>
            </MudCard>
        </MudItem>

        <MudItem xs="12" sm="6" md="4">
            <MudCard>
                <MudCardContent>
                    <MudText Typo="Typo.h6">Saying things in silly voices</MudText>
                    <img src="Singing.png" alt="A girl and a robot singing" style="width: 100%; height: 300px; object-fit: cover;">
                </MudCardContent>
            </MudCard>
        </MudItem>

        <MudItem xs="12" sm="6" md="4">
            <MudCard>
                <MudCardContent>
                    <MudText Typo="Typo.h6">Building a Talking Dog</MudText>
                    <img src="DogOS.jpg" alt="DogOS ready to travel" style="width: 100%; height: 300px; object-fit: cover;">
                </MudCardContent>
            </MudCard>
        </MudItem>

        <MudItem xs="12" sm="6" md="4">
            <MudCard>
                <MudCardContent>
                    <MudText Typo="Typo.h6">Experiments in Computer Vision</MudText>
                    <img src="ComputerVision.png" alt="Computer Vision" style="width: 100%; height: 300px; object-fit: cover;">
                </MudCardContent>
            </MudCard>
        </MudItem>

        <MudItem xs="12" sm="6" md="4">
            <MudCard>
                <MudCardContent>
                    <MudText Typo="Typo.h6">Training Digital Squirrels</MudText>
                    <img src="SquirrelGorilla.png" alt="Squirrel Game" style="width: 100%; height: 300px; object-fit: cover;">
                </MudCardContent>
            </MudCard>
        </MudItem>
