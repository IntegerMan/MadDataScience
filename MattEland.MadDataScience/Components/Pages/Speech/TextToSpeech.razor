@page "/Speech/TextToSpeech"
@rendermode InteractiveServer

<MudContainer MaxWidth="MaxWidth.Medium" Class="mx-auto my-8">

    <MudText Typo="Typo.h4">Text to Speech (Speech Synthesis)</MudText>
    <MudText Typo="Typo.subtitle1" Class="mb-8">
        AI can use neural networks to emulate the patterns of speech by converting text to spoken words.
    </MudText>

    <form @onsubmit="HandleSubmit">
        <MudTextField @bind-Value="Message" Label="Message" Variant="Variant.Outlined" HelperText="Enter some text you want the AI to say" />
    
        <MudSelect T="string" @bind-Value="SelectedVoice" Class="mt-8" Label="Voice" Variant="Variant.Outlined" HelperText="The voice to speak the message in" Dense="true">
            @foreach (var voice in Voices)
            {
                <MudSelectItem Value="@voice">@voice</MudSelectItem>
            }
        </MudSelect>
        
        <MudButton ButtonType="ButtonType.Submit" Color="Color.Primary" Variant="Variant.Filled" Class="mt-8" Disabled="IsBusy">Speak</MudButton>
    </form>
    
    @if (IsBusy)
    {
        <MudProgressLinear Indeterminate="true" Color="Color.Primary" Class="mt-8"/>
    }
    
    @if (!string.IsNullOrWhiteSpace(Error))
    {
        <MudAlert Severity="Severity.Error" Class="mt-8">
            <MudText Typo="Typo.h6" Class="mt8">Error</MudText>
            <MudText Typo="Typo.body1">@Error</MudText>
        </MudAlert>
    }
    @if (Success)
    {
        <MudAlert Severity="Severity.Success" Class="mt-8">
            <MudText Typo="Typo.h6" Class="mt8">Success</MudText>
            <MudText Typo="Typo.body1">Message sent to generate speech</MudText>
        </MudAlert>
    }
</MudContainer>

@code {
    private readonly SpeechService _speechService;

    public TextToSpeech(SpeechService speechService)
    {
        _speechService = speechService;
        Voices = speechService.DefaultVoices;
    }

    protected override Task OnInitializedAsync()
    {
        base.OnInitializedAsync();

        return _speechService.GetSpeechVoiceNamesAsync()
            .ContinueOnUIThread(onSuccess: voices => Voices = voices, null, null);
    }

    public string? Message { get; set; } = "Hello KidzMash! This voice was generated by AI!";
    public bool IsBusy { get; set; }
    public string? Error { get; set; }
    public bool Success { get; set; }
    public string SelectedVoice { get; set; } = "en-US-AvaMultilingualNeural";

    public IEnumerable<string> Voices { get; set; }

    private async Task HandleSubmit()
    {
        if (Message == null)
        {
            Error = "Please enter a message first";
            StateHasChanged();
            return;
        }
        
        IsBusy = true;
        Error = null;
        Success = false;
        StateHasChanged();
        
        await _speechService.SpeakAsync(Message, SelectedVoice).ContinueOnUIThread(
            onSuccess: () => { Success = true; },
            onError: ex => { Error = ex.Message; },
            onFinally: () =>
            {
                IsBusy = false;
                StateHasChanged();
            });
    }
}